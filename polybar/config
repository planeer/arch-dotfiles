[module/menu-apps]
type = custom/menu

label-open = Menu
label-close = Close

; Optional item separator
label-separator = " | "

expand-right = true

;pcmanfc
menu-0-0 = " Files "
menu-0-0-exec = pcmanfm &
menu-0-0-foreground = ${colors.foreground}
; rofi
menu-0-1 = " Menu "
menu-0-1-exec = rofi -show run
menu-0-1-foreground = ${colors.foreground}
; reboot
menu-0-2 = "  "
